# Application Settings
APP_NAME=Job Portal API
APP_VERSION=1.0.0
DEBUG=true

# Database Settings
DATABASE_URL=sqlite:///./jobportal.db
# For PostgreSQL: postgresql://username:password@localhost/jobportal
# For MySQL: mysql://username:password@localhost/jobportal

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Settings
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_EXTENSIONS=.pdf,.doc,.docx

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Email Settings (optional)
SMTP_SERVER=
SMTP_PORT=
SMTP_USERNAME=
SMTP_PASSWORD=

# AI/ML Settings
MODEL_PATH=models
RESUME_SIMILARITY_THRESHOLD=0.7

# External API Keys (optional)
OPENAI_API_KEY=
